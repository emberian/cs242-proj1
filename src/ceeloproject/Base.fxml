<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import ceeloproject.*?>

<GridPane
    prefHeight="576" prefWidth="1024"
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="ceeloproject.BaseController"
    vgap="15" hgap="15"
    id="gridp" stylesheets="/ceeloproject/styles.css">
    
    <HBox GridPane.columnIndex="1" GridPane.rowIndex="1">
        <DiceBox fx:id="p1dice"  />
    </HBox>
    <HBox GridPane.columnIndex="1" GridPane.rowIndex="2">
        <DiceBox fx:id="p2dice"  />
    </HBox>

    <Label id="statustext" fx:id="status" GridPane.columnIndex="1" GridPane.rowIndex="3" text="Human One: Press the button to stop the dice and engage Ceelo!" GridPane.halignment="CENTER" styleClass="fancytextp2" />
    
    <Button text="Roll" id="rollbutton" onAction="#rollDice" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="4" styleClass="thisbuttonissofancy" />   
</GridPane>